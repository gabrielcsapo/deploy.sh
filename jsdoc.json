{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": ["./operations", "package.json", "README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "./node_modules/minami",
        "encoding": "utf8",
        "destination": "docs/code/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "useLongnameInNav": false
    }
}
